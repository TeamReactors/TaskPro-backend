{
  "openapi": "3.1.0",
  "info": {
    "version": "1.0.0",
    "title": "Task Pro",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "description": "This is a documentation of Task Pro"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local Server"
    },
    {
      "url": "https://taskpro-backend-yofv.onrender.com",
      "description": "Production Server"
    }
  ],
  "tags": [
    {
      "name": "Auth",
      "description": "Auth operations."
    },
    {
      "name": "Board",
      "description": "Board operations."
    },
    {
      "name": "Task",
      "description": "Task operations."
    }
  ],
  "paths": {
    "/auth/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "User Login",
        "operationId": "loginUser",
        "description": "Endpoint for user login",
        "security": [
          {}
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/loginUser"
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/200"
          },
          "400": {
            "$ref": "#/components/responses/400"
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    },
    "/auth/register": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "User Registration",
        "operationId": "registerUser",
        "description": "Endpoint for user registration",
        "security": [
          {}
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/registerUser"
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/200"
          },
          "400": {
            "$ref": "#/components/responses/400"
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "User Logout",
        "operationId": "logoutUser",
        "description": "Endpoint for user logout",
        "security": [
          {}
        ],
        "responses": {
          "204": {
            "$ref": "#/components/responses/204"
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    },
    "/auth/refresh": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "User Refresh Token",
        "operationId": "refreshUserToken",
        "description": "Endpoint for refreshing user token",
        "security": [
          {}
        ],
        "responses": {
          "200": {
            "description": "The user's token has been successfully renewed.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/refreshUser"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    },
    "/auth/logout-others": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "User Logout Others",
        "operationId": "logoutOtherSessions",
        "description": "Endpoint for logging out from other sessions",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "The user has been successfully logged out from other sessions.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/logoutOthers"
                }
              }
            }
          },
          "400": {
            "description": "An error occurred while the user was logging out of other sessions.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/logoutOthers"
                }
              }
            }
          },
          "401": {
            "description": "An error occurred while the user was logging out of other sessions.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/logoutOthers"
                }
              }
            }
          }
        }
      }
    },
    "/board": {
      "get": {
        "tags": [
          "Board"
        ],
        "summary": "Get Boards",
        "operationId": "getBoards",
        "description": "Retrieve all boards.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "A list of boards.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/getBoards"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      },
      "post": {
        "tags": [
          "Board"
        ],
        "summary": "Add Board",
        "operationId": "addBoard",
        "description": "Create a new board.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/addBoard"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Board created successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "description": "Success message.",
                      "example": "Board created successfully."
                    },
                    "data": {
                      "$ref": "#/components/schemas/boardItem"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Board error responses",
            "$ref": "#/components/responses/401"
          }
        }
      }
    },
    "/board/{board_id}": {
      "delete": {
        "tags": [
          "Board"
        ],
        "summary": "Delete Board By ID",
        "operationId": "deleteBoard",
        "description": "Delete a board by its ID.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "board_id",
            "in": "path",
            "description": "ID of the board to delete",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Board deleted successfully."
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    },
    "/tasks/{board_id}": {
      "post": {
        "tags": [
          "Task"
        ],
        "summary": "Add Task by Board ID",
        "operationId": "addTaskByBoardId",
        "description": "Add a new task to a specific board by its ID.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "board_id",
            "in": "path",
            "description": "ID of the board to add the task to",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/addTask"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Task added successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "description": "Success message.",
                      "example": "Task added successfully."
                    },
                    "data": {
                      "$ref": "#/components/schemas/taskItem"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      },
      "get": {
        "tags": [
          "Task"
        ],
        "summary": "Get Tasks by Board ID",
        "operationId": "getTasksByBoardId",
        "description": "Retrieve all tasks associated with a specific board by its ID.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "board_id",
            "in": "path",
            "description": "ID of the board to retrieve tasks for",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of tasks associated with the specified board ID.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/getTasksByBoardId"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    },
    "/tasks/{task_id}": {
      "delete": {
        "tags": [
          "Task"
        ],
        "summary": "Delete Task by Task ID",
        "operationId": "deleteTaskByTaskId",
        "description": "Delete a specific task by its ID.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "task_id",
            "in": "path",
            "description": "ID of the task to delete",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Task deleted successfully."
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    },
    "/tasks/{task_id}/move": {
      "patch": {
        "tags": [
          "Task"
        ],
        "summary": "Move Task by Task ID",
        "operationId": "moveTaskByTaskId",
        "description": "Move a specific task by its ID.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "task_id",
            "in": "path",
            "description": "ID of the task to delete",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/moveTask"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Task moved successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "description": "Success message.",
                      "example": "Task moved successfully."
                    },
                    "data": {
                      "$ref": "#/components/schemas/taskItem"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "loginUser": {
        "type": "object",
        "title": "Auth | Login User",
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "description": "Please provide a valid email address.",
            "example": "test@example.com"
          },
          "password": {
            "type": "string",
            "format": "password",
            "description": "Password is a required field.",
            "example": "********"
          }
        },
        "required": [
          "email",
          "password"
        ]
      },
      "loggedInUser": {
        "type": "object",
        "title": "Auth | Logged-in User",
        "properties": {
          "message": {
            "type": "string",
            "example": "User logged in successfully."
          },
          "data": {
            "type": "object",
            "properties": {
              "user": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "number",
                    "example": 1
                  },
                  "name": {
                    "type": "string",
                    "example": "John Doe"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "test@example.com"
                  }
                }
              },
              "accessToken": {
                "type": "string",
                "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
              }
            }
          }
        }
      },
      "BadRequestError": {
        "type": "object",
        "title": "Auth Error | Bad Request ",
        "x-tags": [
          "Auth"
        ],
        "properties": {
          "message": {
            "type": "string",
            "example": "BadRequestError"
          },
          "data": {
            "type": "object",
            "properties": {
              "message": {
                "type": "string",
                "example": "Bad Request"
              },
              "errors": {
                "type": "array",
                "example": [
                  {
                    "message": "Please provide a valid email address",
                    "path": [
                      "email"
                    ],
                    "type": "string.email",
                    "context": {
                      "value": "test@example.comryruytyjtjth",
                      "invalids": [
                        "test@example.comryruytyjtjth"
                      ],
                      "label": "email",
                      "key": "email"
                    }
                  }
                ]
              }
            }
          }
        },
        "readOnly": true
      },
      "UnauthorizedError": {
        "type": "object",
        "title": "Auth Error | Unauthorized ",
        "x-tags": [
          "Auth"
        ],
        "properties": {
          "message": {
            "type": "string",
            "example": "UnauthorizedError"
          },
          "data": {
            "type": "object",
            "properties": {
              "message": {
                "type": "string",
                "example": "Unauthorized access."
              }
            }
          }
        },
        "readOnly": true
      },
      "registerUser": {
        "type": "object",
        "title": "Auth | Register User",
        "properties": {
          "name": {
            "type": "string",
            "description": "Full name of the user.",
            "example": "John Doe",
            "minLength": 2,
            "maxLength": 100
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "Email Address of the user.",
            "example": "test@example.com"
          },
          "password": {
            "type": "string",
            "format": "password",
            "description": "Password for the user account.",
            "example": "********",
            "minLength": 6
          },
          "confirmPassword": {
            "type": "string",
            "format": "password",
            "description": "Confirmation of the password.",
            "example": "********",
            "minLength": 6
          }
        },
        "required": [
          "name",
          "email",
          "password",
          "confirmPassword"
        ]
      },
      "refreshUser": {
        "type": "object",
        "title": "Auth | Refresh User Token",
        "properties": {
          "message": {
            "type": "string",
            "description": "Message indicating the token refresh status.",
            "example": "Token refreshed successfully."
          },
          "data": {
            "type": "object",
            "properties": {
              "accessToken": {
                "type": "string",
                "description": "New access token for the user.",
                "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
              }
            }
          }
        },
        "readOnly": true
      },
      "logoutOthers": {
        "type": "object",
        "title": "Auth | Logout Others",
        "properties": {
          "message": {
            "type": "string",
            "description": "Message indicating the logout status."
          }
        },
        "readOnly": true
      },
      "boardItem": {
        "type": "object",
        "title": "Board | Item",
        "properties": {
          "id": {
            "type": "number",
            "example": 1
          },
          "title": {
            "type": "string",
            "example": "Project Alpha"
          },
          "user_id": {
            "type": "number",
            "example": 42
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "example": "2024-01-01T12:00:00Z"
          }
        },
        "readOnly": true
      },
      "getBoards": {
        "type": "object",
        "title": "Board | Get Boards",
        "properties": {
          "message": {
            "type": "string",
            "example": "Boards retrieved successfully."
          },
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/boardItem"
            }
          }
        }
      },
      "addBoard": {
        "type": "object",
        "title": "Board | Add Board",
        "properties": {
          "title": {
            "type": "string",
            "description": "Title of the board.",
            "example": "Project Alpha"
          }
        },
        "required": [
          "title"
        ]
      },
      "taskItem": {
        "type": "object",
        "title": "Task | Item",
        "properties": {
          "id": {
            "type": "number",
            "example": 1
          },
          "title": {
            "type": "string",
            "example": "Design Homepage"
          },
          "description": {
            "type": "string",
            "example": "Create the initial design for the homepage."
          },
          "priority": {
            "type": "string",
            "enum": [
              "low",
              "medium",
              "high"
            ],
            "example": "high"
          },
          "column_id": {
            "type": "number",
            "example": 3
          },
          "board_id": {
            "type": "number",
            "example": 5
          },
          "deadline": {
            "type": "string",
            "format": "date-time",
            "example": "2024-02-15T09:00:00Z"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "example": "2024-01-10T14:30:00Z"
          }
        },
        "readOnly": true
      },
      "getTasksByBoardId": {
        "type": "object",
        "title": "Task | Get Tasks By Board ID",
        "properties": {
          "message": {
            "type": "string",
            "example": "Tasks retrieved successfully."
          },
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/taskItem"
            }
          }
        }
      },
      "addTask": {
        "type": "object",
        "title": "Task | Add Task By Board ID",
        "properties": {
          "title": {
            "type": "string",
            "example": "Design Homepage"
          },
          "description": {
            "type": "string",
            "example": "Create the initial design for the homepage."
          },
          "priority": {
            "type": "string",
            "enum": [
              "low",
              "medium",
              "high"
            ],
            "example": "high"
          },
          "column_id": {
            "type": "number",
            "example": 3
          },
          "board_id": {
            "type": "number",
            "example": 5
          },
          "deadline": {
            "type": "string",
            "format": "date-time",
            "example": "2024-02-15T09:00:00Z"
          }
        },
        "required": [
          "title",
          "description",
          "priority",
          "column_id",
          "board_id",
          "deadline"
        ]
      },
      "moveTask": {
        "type": "object",
        "title": "Task | Move Task",
        "properties": {
          "column_id": {
            "type": "number",
            "description": "ID of the column to move the task to.",
            "example": 3
          }
        },
        "required": [
          "column_id"
        ]
      }
    },
    "responses": {
      "200": {
        "description": "The user successfully logged in.",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/loggedInUser"
            }
          }
        }
      },
      "204": {
        "description": "No Content - Successful logout",
        "content": {}
      },
      "400": {
        "description": "When the user makes an incorrect request, it returns",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/BadRequestError"
            }
          }
        }
      },
      "401": {
        "description": "Unauthorised access error",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/UnauthorizedError"
            }
          }
        }
      }
    }
  }
}